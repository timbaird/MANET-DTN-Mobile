<?xml version="1.0" encoding="UTF-8"?>
<ContentPage    Title="{Binding ItemType}"
                xmlns="http://xamarin.com/schemas/2014/forms" 
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                x:Class="MANET_DTN_Mobile.Views.MessageDetailsView">
    <StackLayout>
    <Label Text="{Binding Path=RecipientId, StringFormat='Recipient:   {0}'}"/>  
    <Label Text="{Binding Path=OriginatorId, StringFormat='Sender:   {0}'}"/> 
    <Label Text="{Binding Path=DateTimeCreated, StringFormat='Sent Date:   {0}'}"/>   
    <Label Text="{Binding Path=Title, StringFormat='Subject:   {0}'}"/> 
    <Label Text="{Binding Path=Body, StringFormat='Message:   {0}'}"/>  
    </StackLayout>
</ContentPage>
